@using ScoringSystem.Controllers;

@{
    var scheduler = Html.DevExpress().Scheduler(settings => {
        settings.Name = "Scheduler";
        settings.CallbackRouteValues = new { Controller = "Schedule", Action = "SchedulerPartial" };
        settings.EditAppointmentRouteValues = new { Controller = "Schedule", Action = "SchedulerPartialEditAppointment" };

        settings.Storage.EnableReminders = false;
		settings.Storage.Appointments.Assign(ScoreControllerSchedulerSettings.AppointmentStorage);
        settings.Storage.Resources.Assign(ScoreControllerSchedulerSettings.ResourceStorage);
    });
    if (ViewData["SchedulerErrorText"] != null) {
        scheduler.SetErrorText((string)ViewData["SchedulerErrorText"]);
    }
}
@scheduler.Bind(ViewData["Appointments"], ViewData["Resources"]).GetHtml()